# Configuration file for Unitree G1 Isaac Lab Setup
# Edit these values to customize your setup

# ============================================
# Workspace Configuration
# ============================================
export WORKSPACE_DIR="$HOME/g1_workspace"
export ISAACLAB_DIR="$WORKSPACE_DIR/IsaacLab"
export PROJECT_DIR="$WORKSPACE_DIR/g1_project"

# ============================================
# WebRTC Server Configuration
# ============================================
export WEBRTC_PORT=8080
export WEBRTC_HOST="0.0.0.0"

# ============================================
# HuggingFace Model Configuration
# ============================================
# Leave empty to use default controller
# Example: "unitreerobotics/g1-wbc-model"
export HF_REPO=""

# HuggingFace token (if using private models)
# export HF_TOKEN="your_token_here"

# ============================================
# Simulation Configuration
# ============================================
# Device to run simulation on (cuda or cpu)
export DEVICE="cuda"

# Simulation timestep (seconds)
export SIM_DT=0.01

# Number of environments (parallel robots)
export NUM_ENVS=1

# ============================================
# Camera Configuration
# ============================================
export CAMERA_WIDTH=1280
export CAMERA_HEIGHT=720
export CAMERA_FPS=30

# Stream every N frames (higher = lower bandwidth)
export STREAM_EVERY=2

# ============================================
# Control Configuration
# ============================================
# Speed scale for teleop commands (0.0 - 1.0)
export TELEOP_SPEED=0.5

# ============================================
# Performance Configuration
# ============================================
# JPEG quality for streaming (1-100, higher = better quality, more bandwidth)
export JPEG_QUALITY=85

# Enable/disable features
export ENABLE_WEBRTC=true
export ENABLE_TELEOP=true
export HEADLESS=true

# ============================================
# Advanced Configuration
# ============================================
# Isaac Lab physics settings
export PHYSICS_DT=0.005
export SUBSTEPS=2

# GPU device ID (if multiple GPUs)
export CUDA_VISIBLE_DEVICES=0

# ============================================
# Usage:
# ============================================
# Source this file before running launch script:
#   source config.env
#   ./launch_g1.sh webrtc
#
# Or export specific variables:
#   export WEBRTC_PORT=9000
#   ./launch_g1.sh webrtc
